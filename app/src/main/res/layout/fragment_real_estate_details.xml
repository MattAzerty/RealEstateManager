<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/real_estate_details_coord_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.mainActivity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/real_estate_details_cl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:background="@drawable/rounded_corner_background2"
        android:layout_marginLeft="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_bar_tablet_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/real_estate_details_nsv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_bar_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/search_bar_card_container2"
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:animateLayoutChanges="true"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="@dimen/corner_radius_rounded"
                    app:cardElevation="4dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="@color/colorAccentDark"
                    app:strokeWidth="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/search_bar_card_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"
                    android:animateLayoutChanges="true"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="@dimen/corner_radius_rounded"
                    app:cardElevation="6dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/search_bar_card_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/search_bar_search_icon"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="16dp"
                            android:src="@drawable/vc_search_off_white_24dp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white"
                            tools:ignore="ContentDescription" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/search_bar_input_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/search_bar_dropdown_menu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:src="@drawable/vc_keyboard_arrow_down_white_24dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/white"
                                tools:ignore="ContentDescription" />

                            <AutoCompleteTextView
                                android:id="@+id/search_bar_input_text"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_margin="4dp"
                                android:background="@drawable/shape_edittext_rounded_corner"
                                android:gravity="center_vertical"
                                android:hint="@string/search"
                                android:imeOptions="flagNoExtractUi|actionSearch"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingStart="8dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textColorHint="@color/colorSecondary"
                                android:textStyle="italic"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/search_bar_chip_icon"
                                app:layout_constraintStart_toEndOf="@+id/search_bar_dropdown_menu"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/search_bar_chip_icon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="16dp"
                                android:src="@drawable/vc_manage_search_white_24dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/white"
                                tools:ignore="ContentDescription" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <HorizontalScrollView
                android:id="@+id/search_bar_chip_group_hv_poi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:scrollbars="none"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_bar_root">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_action"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:chipSpacingHorizontal="10dp"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_close"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/closePOI"
                        app:chipIcon="@drawable/ic_poi_close_white_24dp"
                        app:chipSurfaceColor="@color/colorRed" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_park"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/parkPOI"
                        app:chipIcon="@drawable/ic_poi_park_white_24dp"
                        app:chipSurfaceColor="@color/colorAccent" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_school"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schoolPOI"
                        app:chipIcon="@drawable/ic_poi_school_white_24dp"
                        app:chipSurfaceColor="@color/colorAccent" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_store"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grocery_store_POI"
                        app:chipIcon="@drawable/ic_poi_grocery_store_white_24dp"
                        app:chipSurfaceColor="@color/colorAccent" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_mall"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shopping_mall_poi"
                        app:chipIcon="@drawable/ic_poi_mall_white_24dp"
                        app:chipSurfaceColor="@color/colorAccent" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_hospital"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hospitalPOI"
                        app:chipIcon="@drawable/ic_poi_hospital_white_24dp"
                        app:chipSurfaceColor="@color/colorAccent" />
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/search_bar_chip_group_hv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:scrollbarThumbHorizontal="@color/colorAccent"
                android:scrollbarTrackHorizontal="@color/colorSecondary"
                android:scrollbars="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/search_bar_chip_group_hv_poi">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/search_bar_chip_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--end-->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/real_estate_details_nsv"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="16dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_bar_tablet_root">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/real_estate_details_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/one_pane_layout"
                    android:layout_width="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="4dp"
                    android:elevation="4dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/real_estate_details_divider1"
                    android:background="@@drawable/shape_rectangle_with_stroke"
                    >

                    <ImageView
                        android:id="@+id/real_estate_item_iv_pic1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:importantForAccessibility="no"
                        android:layout_margin="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:tint="@color/black"
                        android:src="@drawable/vc_apartment_white_24dp" />

                    <TextView
                        android:id="@+id/real_estate_item_tv_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:layout_marginStart="8dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/real_estate_item_iv_map"
                        app:layout_constraintStart_toEndOf="@+id/real_estate_item_iv_pic1"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Penthouse" />

                    <TextView
                        android:id="@+id/real_estate_item_tv_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/colorTextDark"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/real_estate_item_iv_map"
                        app:layout_constraintStart_toEndOf="@+id/real_estate_item_iv_pic1"
                        app:layout_constraintTop_toBottomOf="@+id/real_estate_item_tv_type"
                        tools:text="Upper East Side" />

                    <TextView
                        android:id="@+id/real_estate_item_tv_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="@dimen/fab_margin"
                        android:gravity="start"
                        android:singleLine="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/real_estate_item_tv_city"
                        app:layout_constraintStart_toEndOf="@+id/real_estate_item_iv_pic1"
                        app:layout_constraintTop_toBottomOf="@+id/real_estate_item_tv_city"
                        tools:text="$29,872,000" />

                    <ImageView
                        android:id="@+id/real_estate_item_iv_map"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/shape_circle_ring"
                        android:importantForAccessibility="no"
                        android:padding="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/real_estate_details_fab_location"
                        android:backgroundTint="@color/colorAccent"
                        app:shapeAppearanceOverlay="@style/AddPictureShapeOverlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:layout_marginBottom="@dimen/fab_margin"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/vc_location_on_white_24dp"
                        android:contentDescription="@string/add_a_real_estate_property" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/real_estate_details_divider1.5"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginStart="22dp"
                    app:dividerColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/real_estate_details_divider1"
                    app:layout_constraintTop_toTopOf="@id/real_estate_details_divider1" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/real_estate_details_divider1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:dividerColor="@color/black"
                    android:layout_marginTop="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/one_pane_layout" />

                <TextView
                    android:id="@+id/real_estate_details_tv_media_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/media"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:drawableTint="@color/colorAccent"
                    android:drawableStart="@drawable/vc_image_white_24dp"
                    app:layout_constraintBottom_toBottomOf="@id/real_estate_details_divider1"
                    app:layout_constraintLeft_toLeftOf="@id/real_estate_details_divider1"
                    app:layout_constraintTop_toTopOf="@id/real_estate_details_divider1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/real_estate_details_recyclerView_pictures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/real_estate_details_tv_media_title"
                    tools:ignore="RtlSymmetry"
                    tools:listitem="@layout/picture_item" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/real_estate_details_divider2.5"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginStart="50dp"
                    app:dividerColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/real_estate_details_divider2"
                    app:layout_constraintTop_toTopOf="@id/real_estate_details_divider2" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/real_estate_details_divider2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="22dp"
                    app:dividerColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/real_estate_details_recyclerView_pictures" />

                <TextView
                    android:id="@+id/real_estate_details_tv_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/descriptionDetails"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_assignment_white_24dp"
                    android:drawableTint="@color/colorAccent"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/real_estate_details_divider2"
                    app:layout_constraintLeft_toLeftOf="@id/real_estate_details_divider2"
                    app:layout_constraintTop_toTopOf="@id/real_estate_details_divider2" />

                <TextView
                    android:id="@+id/real_estate_details_tv_description_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:background="@drawable/shape_rectangle_with_stroke2"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingStart="12dp"
                    android:paddingBottom="8dp"
                    tools:text="No description."
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:elevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/real_estate_details_tv_description_title" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/real_estate_details_divider3.5"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:dividerColor="@color/black"
                    android:layout_marginStart="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/real_estate_details_divider3"
                    app:layout_constraintTop_toTopOf="@id/real_estate_details_divider3" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/real_estate_details_divider3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="36dp"
                    app:dividerColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/real_estate_details_tv_description_content" />

                <TextView
                    android:id="@+id/real_estate_details_tv_infos_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/infos"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/vc_info_white_24dp"
                    android:drawableTint="@color/colorAccent"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/real_estate_details_divider3"
                    app:layout_constraintLeft_toLeftOf="@id/real_estate_details_divider3"
                    app:layout_constraintTop_toTopOf="@id/real_estate_details_divider3" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:layout_marginTop="26dp"
                android:elevation="2dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/real_estate_details_divider3"
                android:background="@drawable/shape_rectangle_with_stroke2"
                >

                <TextView
                    android:id="@+id/real_estate_details_infos_title_tv_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:drawableLeft="@drawable/vc_account_box_white_24dp"
                    android:drawableTint="@color/black"
                    android:text=" Agent:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/real_estate_details_infos_tv_agent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/real_estate_details_divider3" />

                <TextView
                    android:id="@+id/real_estate_details_infos_tv_agent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_min="100dp"
                    android:layout_marginRight="20dp"
                    android:paddingStart="12dp"
                    tools:text="Jean BINOT"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@+id/real_estate_details_infos_title_tv_agent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/real_estate_details_infos_title_tv_agent"/>

                <TextView
                    android:id="@+id/real_estate_details_infos_title_tv_surface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text=" Surface:"
                    android:drawableLeft="@drawable/vc_aspect_ratio_white_24dp"
                    android:drawableTint="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/real_estate_details_infos_tv_agent"
                    app:layout_constraintEnd_toStartOf="@+id/real_estate_details_infos_tv_surface"
                    />

                <TextView
                    android:id="@+id/real_estate_details_infos_tv_surface"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_min="100dp"
                    android:layout_marginRight="20dp"
                    android:paddingStart="12dp"
                    tools:text="750mÂ²"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@+id/real_estate_details_infos_title_tv_surface"
                    app:layout_constraintRight_toRightOf="parent"

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/real_estate_details_cl_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.mainActivity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_bar_tablet_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/real_estate_details_nsv"
        android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_bar_root"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/search_bar_card_container2"
            android:layout_width="300dp"
            android:layout_height="90dp"
            app:cardCornerRadius="@dimen/corner_radius_rounded"
            app:cardBackgroundColor="@color/colorAccent"
            android:animateLayoutChanges="true"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/search_bar_card_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/white"
            app:cardCornerRadius="@dimen/corner_radius_rounded"
            app:cardBackgroundColor="@color/colorAccent"
            android:animateLayoutChanges="true"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_bar_card_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/search_bar_search_icon"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:padding="16dp"
                    android:visibility="gone"
                    android:src="@drawable/vc_search_off_white_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    app:tint="@color/white" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/search_bar_input_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/search_bar_dropdown_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@drawable/vc_keyboard_arrow_down_white_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/white"
                        tools:ignore="ContentDescription" />

                    <AutoCompleteTextView
                        android:id="@+id/search_bar_input_text"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:gravity="center_vertical"
                        android:imeOptions="flagNoExtractUi|actionSearch"
                        android:paddingStart="8dp"
                        android:hint="@string/search"
                        android:textColorHint="@color/colorSecondary"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:background="@drawable/shape_edittext_rounded_corner"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/search_bar_chip_icon"
                        app:layout_constraintStart_toEndOf="@+id/search_bar_dropdown_menu"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/search_bar_chip_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="16dp"
                        android:src="@drawable/vc_manage_search_white_24dp"
                        app:tint="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:id="@+id/search_bar_chip_group_hv_poi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/search_bar_root"
            >
            <com.google.android.material.chip.ChipGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/chip_group_action"
                android:padding="10dp"
                app:singleLine="true"
                app:singleSelection="true"
                app:chipSpacingHorizontal="10dp"
                style="@style/Widget.MaterialComponents.Chip.Action"
                >
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipSurfaceColor="@color/colorRed"
                    android:id="@+id/chip_close"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:text="@string/closePOI"
                    app:chipIcon="@drawable/ic_poi_close_white_24dp"
                    />
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipSurfaceColor="@color/colorAccent"
                    android:id="@+id/chip_park"
                    android:text="@string/parkPOI"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    app:chipIcon="@drawable/ic_poi_park_white_24dp"
                    />
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipSurfaceColor="@color/colorAccent"
                    android:id="@+id/chip_school"
                    android:text="@string/schoolPOI"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    app:chipIcon="@drawable/ic_poi_school_white_24dp"
                    />
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipSurfaceColor="@color/colorAccent"
                    android:id="@+id/chip_store"
                    android:text="@string/grocery_store_POI"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    app:chipIcon="@drawable/ic_poi_grocery_store_white_24dp"
                    />
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipSurfaceColor="@color/colorAccent"
                    android:id="@+id/chip_mall"
                    android:text="@string/shopping_mall_poi"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    app:chipIcon="@drawable/ic_poi_mall_white_24dp"
                    />
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipSurfaceColor="@color/colorAccent"
                    android:id="@+id/chip_hospital"
                    android:text="@string/hospitalPOI"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    app:chipIcon="@drawable/ic_poi_hospital_white_24dp"
                    />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/search_bar_chip_group_hv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:scrollbarThumbHorizontal="@color/colorAccent"
            android:scrollbarTrackHorizontal="@color/colorSecondary"
            android:scrollbars="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/search_bar_chip_group_hv_poi">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/search_bar_chip_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


        <!--end-->
        <ScrollView
            android:id="@+id/real_estate_details_nsv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/search_bar_tablet_root"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:scrollbars="none"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/real_estate_details_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/white">

            <TextView
                android:id="@+id/real_estate_details_tv_media_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginStart="40dp"
                android:text="@string/media"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_bar_chip_group"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/real_estate_details_recyclerView_pictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/real_estate_details_tv_media_title"
                tools:listitem="@layout/picture_item"
                tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/real_estate_details_tv_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginStart="40dp"
                    android:text="@string/descriptionDetails"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/real_estate_details_recyclerView_pictures"/>

                <TextView
                    android:id="@+id/real_estate_details_tv_description_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fab_margin"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:text="This stunning penthouse offers the ultimate luxury living experience in the heart of the city. With sweeping panoramic views of the skyline from every window, this spacious and light-filled apartment boasts high-end finishes and impeccable attention to detail. The open-plan living area features soaring ceilings and flows seamlessly into the gourmet kitchen, complete with top-of-the-line appliances and sleek modern cabinetry. The master suite is a true oasis, with a luxurious en-suite bathroom featuring a spa-like soaking tub and a private balcony with breathtaking views."
                    android:textColor="@color/colorTextDark"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/real_estate_details_tv_description_title"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<TextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tag_item_tv_tag"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:maxLines="1"
    android:padding="4dp"
    android:textColor="@color/colorAccent"
    android:textSize="18sp"
    android:textStyle="bold"
    android:text="[S>]:"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="@id/tag_item_tv_description"
    app:layout_constraintStart_toStartOf="parent"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tag_item_tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableEnd="@drawable/vc_add_circle_outline_white_24dp"
        android:drawableTint="@color/colorSecondary"
        android:maxLines="1"
        android:padding="4dp"
        android:textColor="@color/black"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="18sp"
        android:text="Surface minimum in sq m."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tag_item_tv_tag"/>

</androidx.constraintlayout.widget.ConstraintLayout>